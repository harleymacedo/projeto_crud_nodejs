<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <div class="container">
        <div class="row">
            <h3>Lista de Empregadoss</h3>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-dark">
                    <tr>
                        <th>Matrícula</th>
                        <th>Nome</th>
                        <th>Salário</th>
                        <th>Ações <span><a href='/novoProduto'><img src="https://img.icons8.com/office/30/000000/add.png"></span></a></th>
                    </tr>
                    <% empregados.rows.forEach(function(row) { %>
                        <tr>
                            <td><%= row.matricula%></td>
                            <td><%= row.nome%></td>
                            <td><%= row.salario%></td>
                            <td><a href="/deletarProduto/<%=row.matricula%>?_method=DELETE"><img src="https://img.icons8.com/metro/26/000000/delete-sign.png"/></a> <a href="/editaProduto/<%=row.matricula%>"><img src="https://img.icons8.com/android/24/000000/edit.png"/></a></td>
                        </tr>
                     <% }) %>
                </table>
            </div>  
        </div>    
    </div>
    
</body>
</html>